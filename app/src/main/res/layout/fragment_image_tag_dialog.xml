<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageTagDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/edit_tags_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/editTagHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Edit tags"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parentLayoutEditTags"
                android:layout_below="@id/editTagHeading"
                android:background="@color/bluegrey_100_light"
                android:columnCount="2" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/new_tags_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/addNewTagsBtn"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Add new tags"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parentLayoutAddTags"
                android:orientation="vertical"
                android:layout_below="@id/addNewTagsBtn"
                android:background="@color/bluegrey_100_light">


            </LinearLayout>


        </RelativeLayout>



    </LinearLayout>

</ScrollView>